<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AirSageAi" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        <!-- Use animated vector drawable for the icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/airsage_logo_withname</item>
        <item name="windowSplashScreenAnimationDuration">500</item> <!-- in ms -->

        <!-- Post-splash screen theme (your regular app theme) -->
        <item name="postSplashScreenTheme">@style/Theme.AirSageAi</item>
    </style>
</resources>